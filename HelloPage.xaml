<Page x:Class="WpfApp1.HelloPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp1"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="HelloPage">

    <Grid>
        <TextBox Name="TextBoxHello" HorizontalAlignment="Left" Height="40" Margin="270,280,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="275" FontSize="24"/>
        <TextBlock HorizontalAlignment="Left" Margin="170,135,0,0" TextWrapping="Wrap" Text="Привет! Чтобы перейти к азбуке напиши свое имя ниже" VerticalAlignment="Top" Height="115" Width="515" FontSize="36" Foreground="#FFFF0080"/>
        <TextBlock HorizontalAlignment="Left" Margin="180,271,0,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Height="49" Width="75" FontSize="36" Foreground="#FFFF0080"/>
        <Button Content="Ok" Name="ButtonOk" HorizontalAlignment="Left" Margin="570,280,0,0" VerticalAlignment="Top" Width="81" Height="40" FontSize="24" Click="ButtonOk_Click">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
        
    </Grid>
</Page>
